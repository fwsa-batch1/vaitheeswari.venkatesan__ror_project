<article>
  <h1 class="Todo-Title">My To-do List</h1>
  <%=form_with(url:"/todos" ,method:"post",class:"TodoAdd") do%>
    <%=text_field_tag "todo_text",nil,class:"TodoAdd-Text",placeholder:"Whatâ€™s next?"%>
    <%=date_field_tag "due_date",nil,class:"TodoAdd-Date"%>
    <%=submit_tag nil,class:"TodoAdd-Button",value:"Add"%>
  <%end%>
  <%=render partial:"todo-section", locals: {section_title: "Overdue",todos:Todo.overdue.not_completed }%>
  <%=render partial:"todo-section", locals: {section_title: "Due Today",todos:Todo.due_today }%>
  <%=render partial:"todo-section", locals: {section_title: "Due Later",todos:Todo.due_later }%>
</article>
